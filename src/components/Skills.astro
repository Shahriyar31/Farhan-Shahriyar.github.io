</section>

<style>
    .skill-grid {
        display: grid;
        /* UPDATED: Cards are now smaller */
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        gap: 1.5rem;
    }

  .skill-card {
    @apply relative aspect-square flex flex-col items-center justify-center p-4 
           rounded-2xl backdrop-blur-lg
           transition-all duration-300 ease-in-out;

    background-color: var(--glass-bg);
    border: 1px solid var(--glass-border);
}
    .skill-card:hover {
        transform: translateY(-5px);
        @apply shadow-2xl border-blue-500/50;
    }

    .skill-card-icon {
        @apply w-14 h-14 flex items-center justify-center mb-2 transition-transform duration-300;
    }
    .skill-card:hover .skill-card-icon {
        transform: scale(1.1);
    }
    /* UPDATED: Icons are now larger */
    .skill-card-icon i, .skill-card-icon svg {
        @apply text-5xl h-12 w-12;
    }

    .skill-card-name {
        @apply font-semibold text-sm text-center text-slate-700 dark:text-slate-300;
    }
</style>